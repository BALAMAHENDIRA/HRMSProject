
@model IEnumerable<HRMSProject.Models.CarCatVM>


@{
    ViewData["Title"] = "GetCarbyID";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetCarbyID</h1>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car_Seats)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.cat_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category_name)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <span>@item.Model</span>
            </td>
            <td>
                <span>@item.Brand</span>
            </td>
            <td>
                <span>@item.Color</span>
            </td>
            <td>
                <span>@item.Car_Seats</span>
            </td>
            <td>
                <span>@item.cat_id</span>
            </td>
            <td>
                <span>@item.category_name</span>
            </td>


        </tr>

    }
</table> 